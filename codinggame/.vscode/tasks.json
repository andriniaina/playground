{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "options": {"cwd": "${workspaceFolder}/Tests"},
            "args": [
                "test",
                "${workspaceFolder}/Tests/Tests.fsproj"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}